<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.taiyilin.mandarinlearning.ResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="01"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="This is question"
            app:layout_constraintBottom_toBottomOf="@+id/text_question_number"
            app:layout_constraintStart_toEndOf="@+id/text_question_number"
            app:layout_constraintTop_toTopOf="@+id/text_question_number" />

        <TextView
            android:id="@+id/title_user_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Your Answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_question_number" />

        <TextView
            android:id="@+id/title_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Correct Answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_user_answer" />

        <TextView
            android:id="@+id/text_user_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/title_user_answer"
            app:layout_constraintStart_toEndOf="@+id/title_user_answer"
            app:layout_constraintTop_toTopOf="@+id/title_user_answer"
            tools:text="user answer" />

        <TextView
            android:id="@+id/text_correct_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/title_correct_answer"
            app:layout_constraintStart_toEndOf="@+id/title_correct_answer"
            app:layout_constraintTop_toTopOf="@+id/title_correct_answer"
            tools:text="correct answer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>