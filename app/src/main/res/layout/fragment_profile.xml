<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/two_tones_background"
        tools:context=".main.profile.ProfileFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:layout_marginTop="32dp"
            android:background="@color/white"
            android:elevation="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_cover"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/sand_gray"
                    android:elevation="20dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/course_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_student" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cabin_bold"
                    android:letterSpacing="0.1"
                    android:text="Auntie Lin"
                    android:textColor="@color/purple_dark"
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView_cover" />

                <TextView
                    android:id="@+id/textview_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cabin_medium"
                    android:letterSpacing="0.1"
                    android:text="Senior"
                    android:textColor="@color/purple_mid"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/textview_identity"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textview_name" />

                <TextView
                    android:id="@+id/textview_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/cabin_medium"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:text="Instructor"
                    android:textColor="@color/purple_mid"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textview_level"
                    app:layout_constraintTop_toBottomOf="@+id/textview_name" />

                <TextView
                    android:id="@+id/text_profile_description"
                    android:layout_width="188dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/cabin"
                    android:gravity="left"
                    android:letterSpacing="0.1"
                    android:text="I am Auntie Lin. I am a mandarin teacher. I am Auntie Lin. I am a mandarin teacher. I am Auntie Lin. I am a mandarin teacher."
                    android:textColor="@color/purple_dark"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view_detail_color_separation"
                    app:layout_constraintEnd_toEndOf="@+id/cardView_cover"
                    app:layout_constraintHorizontal_bias="0.125"
                    app:layout_constraintStart_toEndOf="@+id/view_detail_color_separation"
                    app:layout_constraintTop_toTopOf="@+id/view_detail_color_separation"
                    app:layout_constraintVertical_bias="0.441" />

                <View
                    android:id="@+id/view_detail_color_separation"
                    style="@style/DetailSeparation"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/purple_dark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/cardView_cover"
                    app:layout_constraintTop_toBottomOf="@+id/textview_level" />

                <ImageButton
                    android:id="@+id/button_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_background"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_create_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_dark"
            android:clickable="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_new" />

        <TextView
            android:id="@+id/textview_classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cabin_bold"
            android:letterSpacing="0.1"
            android:text="My Classes &amp; Feedback"
            android:textColor="@color/purple_dark"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewContinueCourse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_classes"
            app:layout_constraintVertical_bias="0.074"
            tools:listitem="@layout/item_profile_my_classes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>