<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
            <variable
                name="viewModel"
                type="com.taiyilin.mandarinlearning.pickRole.PickRoleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_light2"
        tools:context=".pickRole.PickRoleActivity">

        <TextView
            android:id="@+id/textview_pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/cabin_bold"
            android:letterSpacing="0.1"
            android:text="Pick Your Role"
            android:textColor="@color/purple_dark"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/animation_teacher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="I am an instructor"
            android:textColor="@color/teal"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/animation_student"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animation_teacher" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_teacher"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_teacher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_pick"
            app:lottie_autoPlay="true"
            app:lottie_fileName="teacher-or-instructor.json"
            app:lottie_imageAssetsFolder="images"
            app:lottie_loop="true" />

        <Button
            android:id="@+id/button_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="I am a student"
            android:textColor="@color/teal"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animation_student" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_student"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button_student"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_teacher"
            app:lottie_autoPlay="true"
            app:lottie_fileName="anim_student.json"
            app:lottie_imageAssetsFolder="images"
            app:lottie_loop="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>