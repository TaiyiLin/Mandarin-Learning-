<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <activity
        android:id="@+id/logInActivity"
        android:name="com.taiyilin.mandarinlearning.login.LogInActivity"
        android:label="LogInActivity" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.taiyilin.mandarinlearning.main.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/navigation_homeDetail"
        android:name="com.taiyilin.mandarinlearning.homeDetail.HomeDetailFragment"
        android:label="HomeDetail"
        tools:layout="@layout/fragment_home_detail">
        <argument
            android:name="courseDetail"
            app:argType="com.taiyilin.mandarinlearning.data.Course" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.taiyilin.mandarinlearning.main.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_classroom"
        android:name="com.taiyilin.mandarinlearning.main.classroom.ClassroomFragment"
        android:label="Classroom"
        tools:layout="@layout/fragment_classroom" />

    <fragment
        android:id="@+id/sentenceReorderingFragment"
        android:name="com.taiyilin.mandarinlearning.sentenceReordering.SentenceReorderingFragment"
        android:label="fragment_sentence_reordering"
        tools:layout="@layout/fragment_sentence_reordering" >
        <argument
            android:name="classroomData"
            app:argType="com.taiyilin.mandarinlearning.data.Classroom" />
    </fragment>


    <fragment
        android:id="@+id/classesNFeedbackFragment"
        android:name="com.taiyilin.mandarinlearning.classesNfeedback.ClassesNFeedbackFragment"
        android:label="fragment_classes_n_feedback"
        tools:layout="@layout/fragment_classes_n_feedback" />

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.taiyilin.mandarinlearning.result.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" >
        <argument
            android:name="classroomKey"
            app:argType="com.taiyilin.mandarinlearning.data.Classroom" />
    </fragment>

    <activity
        android:id="@+id/pickRoleActivity"
        android:name="com.taiyilin.mandarinlearning.pickRole.PickRoleActivity"
        android:label="activity_pick_role"
        tools:layout="@layout/activity_pick_role" />
    <fragment
        android:id="@+id/teacherClassroomFragment"
        android:name="com.taiyilin.mandarinlearning.teacherClassroom.TeacherClassroomFragment"
        android:label="fragment_teacher_classroom"
        tools:layout="@layout/fragment_teacher_classroom" />
    <fragment
        android:id="@+id/teacherHomeFragment"
        android:name="com.taiyilin.mandarinlearning.teacherHome.TeacherHomeFragment"
        android:label="fragment_teacher_home_"
        tools:layout="@layout/fragment_teacher_home_" />
    <fragment
        android:id="@+id/teacherProfileFragment"
        android:name="com.taiyilin.mandarinlearning.teacherProfile.TeacherProfileFragment"
        android:label="fragment_teacher_profile_"
        tools:layout="@layout/fragment_teacher_profile_" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.taiyilin.mandarinlearning.MainActivity"
        android:label="MainActivity" />

    <fragment
        android:id="@+id/teacherClassroomDetailFragment"
        android:name="com.taiyilin.mandarinlearning.teacherClassroomDetail.TeacherClassroomDetailFragment"
        android:label="TeacherClassroomDetailFragment" />

    <action android:id="@+id/action_global_navigation_home" app:destination="@id/navigation_home"/>
    <action android:id="@+id/action_global_navigation_classroom" app:destination="@id/navigation_classroom"/>
    <action android:id="@+id/action_global_sentenceReorderingFragment" app:destination="@id/sentenceReorderingFragment"/>
    <action android:id="@+id/action_global_navigation_profile" app:destination="@id/navigation_profile"/>
    <action android:id="@+id/action_global_classesNFeedbackFragment" app:destination="@id/classesNFeedbackFragment" />
    <action android:id="@+id/action_global_navigation_homeDetail" app:destination="@id/navigation_homeDetail"/>
    <action android:id="@+id/action_global_resultFragment" app:destination="@id/resultFragment" />
    <action android:id="@+id/action_global_teacherHomeFragment" app:destination="@id/teacherHomeFragment"/>
    <action android:id="@+id/action_global_teacherClassroomFragment" app:destination="@id/teacherClassroomFragment"/>
    <action android:id="@+id/action_global_teacherProfileFragment" app:destination="@id/teacherProfileFragment"/>
    <action android:id="@+id/action_global_teacherClassroomDetailFragment" app:destination="@id/teacherClassroomDetailFragment" />
    <action android:id="@+id/action_navigation_home_to_navigation_homeDetail" app:destination="@id/navigation_homeDetail" />

</navigation>